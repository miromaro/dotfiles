alt + {h,j,k,l}
    bspc node -f {west,south,north,east}
~button1
    bspc pointer -g focus
alt + shift + {h,j,k,l}
    bspc node -p {west,south,north,east}
alt + shift + {1-9}
    bspc node -o 0.{1-9}
alt + shift + space
    bspc node -p cancel
alt + f
    bspc node -t floating
alt + t
    bspc node -t tiled
alt + q
    bspc node -c
alt + {1-3}
    bspc desktop -f "^{1-3}"

alt + shift + ctrl + q
    bspc quit
alt + shift + ctrl + r
    bspc quit && sudo reboot
alt + shift + ctrl + p
    bspc quit && sudo poweroff

alt + Return
    urxvtc
alt + ctrl + f
    firefox
